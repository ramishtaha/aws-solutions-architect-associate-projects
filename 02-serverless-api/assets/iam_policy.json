{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBTaskTableAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:Scan",
                "dynamodb:Query"
            ],
            "Resource": [
                "arn:aws:dynamodb:*:*:table/Tasks",
                "arn:aws:dynamodb:*:*:table/Tasks/index/*"
            ]
        },
        {
            "Sid": "DynamoDBDescribeTable",
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:*:*:table/Tasks"
            ]
        }
    ]
}
